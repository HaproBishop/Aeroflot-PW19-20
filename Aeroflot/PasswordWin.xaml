<Window x:Class="Aeroflot.PasswordWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aeroflot"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="170" MinWidth="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontSize="12" SizeToContent="WidthAndHeight" Activated="Window_Activated" Loaded="Window_Loaded">
    <StackPanel>
        <Label Content="Пользователь"/>
        <TextBox x:Name="Login" Margin="3" MinWidth="170"/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="Password" Margin="3"/>
        <Button x:Name="LoginToProg" Content="Войти" Margin="3" IsDefault="True" Click="LoginToProg_Click"/>
        <Button Content="Отмена" IsCancel="True" Margin="3"/>
    </StackPanel>
</Window>
